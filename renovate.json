{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "description": "Automated dependency updates for Golf Ryder Cup App",
  "labels": ["dependencies", "automated"],
  "baseBranches": ["main"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "America/New_York",
  "schedule": ["after 10pm on sunday"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Auto-merge patch updates for non-major dependencies",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Group React ecosystem updates",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React ecosystem"
    },
    {
      "description": "Group Next.js updates",
      "matchPackagePatterns": ["^next", "^@next/"],
      "groupName": "Next.js"
    },
    {
      "description": "Group testing updates",
      "matchPackagePatterns": ["vitest", "playwright", "@testing-library", "@vitest/"],
      "groupName": "Testing tools"
    },
    {
      "description": "Group linting updates",
      "matchPackagePatterns": ["eslint", "prettier", "lint-staged", "husky"],
      "groupName": "Linting tools"
    },
    {
      "description": "Group Supabase updates",
      "matchPackagePatterns": ["@supabase/"],
      "groupName": "Supabase"
    },
    {
      "description": "Group Sentry updates",
      "matchPackagePatterns": ["@sentry/"],
      "groupName": "Sentry"
    },
    {
      "description": "Group Tailwind updates",
      "matchPackagePatterns": ["tailwind", "@tailwindcss/"],
      "groupName": "Tailwind CSS"
    },
    {
      "description": "Require manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update", "needs-review"]
    },
    {
      "description": "Pin GitHub Actions",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ],
  "postUpdateOptions": ["npmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on the first day of the month"]
  }
}
