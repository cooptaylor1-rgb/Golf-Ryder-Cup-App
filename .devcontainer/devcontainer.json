{
  "name": "Golf Ryder Cup App - Xcode Dev Container",
  "image": "mcr.microsoft.com/devcontainers/swift:1-focal",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang",
        "vknabel.vscode-apple-swift-format",
        "streetsidesoftware.code-spell-checker",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "swift.path": "/usr/bin/swift",
        "[swift]": {
          "editor.defaultFormatter": "vknabel.vscode-apple-swift-format"
        }
      }
    }
  },

  "postCreateCommand": "swift --version && echo 'âœ… Swift dev container ready!'",

  "remoteUser": "vscode",

  "mounts": [],

  "forwardPorts": [],

  "portsAttributes": {},

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
